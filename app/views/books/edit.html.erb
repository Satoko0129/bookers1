<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>WebCampBackendNew</title>
  </head>

  <body>
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>

    <%= form_with model: @book do |f| %>
      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
      </div>

      <div class="actions">
        <%= f.submit 'Update Book' %>
      </div>
    <% end %>

    <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></a>
  </body>
</html>